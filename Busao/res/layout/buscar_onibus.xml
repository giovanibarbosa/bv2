<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" android:gravity="right">
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="90dp"
        android:orientation="horizontal"
        android:gravity="right">

        <EditText
            android:id="@+id/paramBusca"
            android:layout_width="132dp"
            android:layout_height="55dp"
            android:layout_marginLeft="40dp"
            android:textSize="10dp"
            android:gravity="center" android:layout_alignBottom="@+id/search"/>

        <ImageView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/paramBusca"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/botao_seach_normal_digitando" />
        
    </RelativeLayout>
        
</RelativeLayout>