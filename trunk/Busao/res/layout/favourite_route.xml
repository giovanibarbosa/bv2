<!-- 		        android:src="@drawable/maps_favourite_route"/> -->
	        
	    </RelativeLayout>
	    
	    <LinearLayout
	        android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" 
		    android:clickable="false">
		        
	        
	        <!-- NOME DA ROTA. CONCATENAR COM COR -->
		    <TextView
		        android:id="@+id/list_routeName"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="2dp"
		        android:layout_marginLeft="2dp"
		        android:textColor="#000000"
		        android:textSize="15sp" />
		    
		    <TextView
		        android:id="@+id/list_num"
		        android:text="@string/num_onibus"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="2dp"
		        android:layout_marginLeft="2dp"
		        android:textColor="#000000"
		        android:textSize="10sp" />
		    	    
		    <TextView
		        android:id="@+id/list_dif"
		        android:text="@string/dif_onibus"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="2dp"
		        android:layout_marginLeft="2dp"
		        android:textColor="#000000"
		        android:textSize="10sp" />
		    	    
		    <TextView
		        android:id="@+id/list_h1"
		        android:text="@string/hora_inicio"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="2dp"
		        android:layout_marginLeft="2dp"
		        android:textColor="#000000"
		        android:textSize="10sp" />
		    	    
		    <TextView
		        android:id="@+id/list_hf"
		        android:text="@string/hora_fim"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="2dp"
		        android:layout_marginLeft="2dp"
		        android:textColor="#000000"
		        android:textSize="10sp" />
	        
