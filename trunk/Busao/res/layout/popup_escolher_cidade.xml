		android:layout_height="wrap_content" android:id="@+id/spinner_cidade"
		android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true" android:layout_margin="10dp"></Spinner>
	<TextView style="?android:textAppearanceMedium" android:text="@string/descricao_popup_cidade" android:layout_width="wrap_content" android:id="@+id/message" android:layout_height="wrap_content" android:layout_below="@+id/spinner_cidade" android:layout_alignParentLeft="true" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp"></TextView>
</RelativeLayout>

