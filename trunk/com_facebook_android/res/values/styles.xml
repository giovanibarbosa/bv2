<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="NavigationBarTitle">
        <item name="android:layout_gravity">center</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
      	<item name="android:shadowColor">#4D001E54</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    
    <style name="NavigationBarButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:maxWidth">85dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:shadowColor">#4D000000</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/navigation_bar_button_bkg</item>
        <item name="android:textColor">@color/navigation_bar_button_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
    </style>
    
</resources>